<div id="search-form">
	<h1>
		<a href="/">Search</a><br>
	</h1>
	Passwords:
	<form action="/search/pass" method="get" accept-charset="utf-8" class="form-search">
		<input type="hidden" name="s" value="<%= params[:s] %>">
		<input type="text" class="input-large search-query" name="q" value="<%= params[:q] %>">
		<button type="submit" class="btn">Search</button>
	</form>
	Hashes:
	<form action="/search/hash" method="get" accept-charset="utf-8" class="form-search">
		<input type="hidden" name="s" value="<%= params[:s] %>">
		<input type="text" class="input-large search-query" name="h" value="<%= params[:h] %>">
		<button type="submit" class="btn">Search</button>
	</form>
</div>
<br>
<br>
<table class="table table-condensed">
	<tr>
		<th>TYPE</th>
		<th>PASSWORD</th>
		<th>HASH</th>
	</tr>
	<% @s.results.each do |m| %>
	<tr>
		<td><%= m['type'] %></td>
		<td><%= m['password'] %></td>
		<td><%= m['hash'] %></td>
	</tr>
<% end %>
</table>

<% if @s.results.total > (params[:p].to_i+1)*settings.per_page %>
	<p>
		<a href="/?q=<%= params[:q] %>&amp;s=<%= params[:s] %>&amp;p=<%= params[:p].to_i+1 %>">Next &raquo;</a>
	</p>
<% end %>

<% if @s.results.empty? %>
	<p>No results.</p>
<% end %>

</body>
</html>